class SearchingInString{
    public static void main(String[] args) {
        System.out.println("************");
        String name="bhavana";
        char target='v';
        System.out.println(stringsearch(name,target));
        
    }
    public static boolean stringsearch(String name,char target)
    {
        for(int i=0;i<name.length();i++){
       char key= name.charAt(i);
        if(target==name.charAt(i)){
            System.out.println("the target character is " + target + " and it is found at " + i);
            return true;
        }
        }
        return false;
    }
}
